# Templates 
[template-static]
cflags_heritage = True
build_dir       = ./static/
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = False
jobs            = 4
mklib           = static
target          = $TARGET
output          = $STATIC_LIB
exclude_dirs    = $EXCLUDE_DIRS

[template-static-mpi]
cflags_heritage = True
build_dir       = ./static_mpi/
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = False
jobs            = 4
mklib           = static
target          = $TARGET
output          = $MPI_STATIC_LIB
exclude_dirs    = $EXCLUDE_DIRS
mpi             = True

[template-shared]
cflags_heritage = True
build_dir       = ./shared/
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = False
jobs            = 4
mklib           = shared
target          = $TARGET
output          = $SHARED_LIB
exclude_dirs    = $EXCLUDE_DIRS

[template-shared-mpi]
cflags_heritage = True
build_dir       = ./shared_mpi/
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = False
jobs            = 4
mklib           = shared
target          = $TARGET
output          = $MPI_SHARED_LIB
exclude_dirs    = $EXCLUDE_DIRS
mpi             = True

[template-tests]
cflags_heritage = True
build_dir       = ./bin/
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = False
jobs            = 4
target          = $TEST_TARGET
exclude_dirs    = $EXCLUDE_DIRS

[template-tests-mpi]
cflags_heritage = True
build_dir       = ./bin_mpi/
mod_dir         = ./mod/
obj_dir         = ./obj/
src             = ./src/
colors          = True
quiet           = False
log             = False
jobs            = 4
target          = $TEST_TARGET
exclude_dirs    = $EXCLUDE_DIRS
mpi             = True

[rule-makedoc]
help   = Rule for building documentation from source files
rule_1 = rm -rf doc/html/*
rule_2 = ford $FORD_FILE

[rule-deldoc]
help = Rule for deleting documentation
rule = rm -rf doc/html/*

[rule-makecoverage]
help   = Rule for performing coverage analysis
rule_1 = FoBiS.py clean -mode tests-gnu-mpi-debug
rule_2 = FoBiS.py build -mode tests-gnu-mpi-debug -coverage
rule_3 = mpirun -np 4 ./bin_mpi/run_tests
rule_4 = gcov -o bin_mpi/obj/ src/lib/*