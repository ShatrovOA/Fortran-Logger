#templates
[template-shared-gnu]
compiler     = gnu
cflags       = $CSHARED_GNU $OPTIMIZE
lflags       = $LSHARED $OPTIMIZE
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
exclude_dirs = $EXDIRS
colors       = True
quiet        = False
log          = True
jobs         = 10

[template-static-gnu]
compiler     = gnu
cflags       = $CSTATIC_GNU $OPTIMIZE
lflags       = $OPTIMIZE
mod_dir      = ./mod/
obj_dir      = ./obj/
src          = ./src/
exclude_dirs = $EXDIRS
colors       = True
quiet        = False
log          = True
jobs         = 10


