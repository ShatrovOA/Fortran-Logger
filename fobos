[modes]
modes = shared-gnu static-gnu tests-gnu shared-gnu-mpi static-gnu-mpi static-gnu-caf
        shared-gnu-debug static-gnu-debug tests-gnu-debug shared-gnu-mpi-debug static-gnu-mpi-debug
        shared-intel static-intel tests-intel shared-intel-mpi static-intel-mpi 
        shared-intel-debug static-intel-debug tests-intel-debug shared-intel-mpi-debug static-intel-mpi-debug 

[common-variables]
$MPI_PREPROCESS = -D_MPI
$CAF_PREPROCESS = -D_CAF
$R16P_SUPPORED = -D_R16P
$CSHARED_GNU = -cpp -c -fPIC -frealloc-lhs -fno-omit-frame-pointer -DUSE_UCS4 -std=f2018 -ffree-line-length-none
$CSHARED_INT = -cpp -c -fpic -assume realloc_lhs 
$LSHARED     = -shared
$CSTATIC_GNU = -cpp -c -frealloc-lhs -fbacktrace -pedantic -std=f2008 -fno-omit-frame-pointer -DUSE_UCS4 -ffree-line-length-none
$CSTATIC_INT = -cpp -c -assume realloc_lhs 
$DEBUG_GNU   = -O0 -g3 -DUSE_UCS4 -std=f2018 -m64 -ffree-line-length-0 -O0 -W -Wall -ggdb -fopt-info -fopt-info-optall-optimized -ftree-vectorize -g -fimplicit-none -Wline-truncation  -Wcharacter-truncation  -Wsurprising  -Waliasing -Wimplicit-interface -Wunused-parameter  -fwhole-file  -fcheck=all  -pedantic  -fbacktrace -ffpe-trap=invalid,zero,overflow,underflow -ffpe-summary=none -std=f2008 -Warray-bounds -Wimplicit-procedure -Wunderflow -Wuninitialized -fimplicit-none -fbacktrace -fdump-core -finit-real=nan
$DEBUG_INT   = -O0 -check arg_temp_created -check format -check assume -check format -check output_conversion -check pointers -check stack -check uninit -debug all -warn all -extend-source 132 -traceback
$OPTIMIZE    = -O2
$EXDIRS      = FACE/src/tests/ FLAP/src/tests/ PENF/src/tests/ datetime-fortran/src/tests/ json-fortran/src/tests json-fortran/visual_studio

# main modes
[shared-gnu]
template  = template-shared-gnu
target    = src/lib/fortran_logger.F90
build_dir = ./shared/
output    = libfortranlogger.so
mklib     = shared
preproc   = $R16P_SUPPORED

[shared-gnu-mpi]
template  = template-shared-gnu
target    = src/lib/fortran_logger.F90
build_dir = ./shared_mpi/
output    = libfortranlogger_mpi.so
mklib     = shared
preproc   = $MPI_PREPROCESS $R16P_SUPPORED
mpi       = true

[static-gnu]
template  = template-static-gnu
target    = src/lib/fortran_logger.F90
build_dir = ./static/
output    = libfortranlogger.a
mklib     = static
preproc   = $R16P_SUPPORED

[static-gnu-mpi]
template  = template-static-gnu
